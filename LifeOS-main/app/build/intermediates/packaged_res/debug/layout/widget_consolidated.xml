<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LifeOS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/widget_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_button_bg"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="NONE"
            android:textColor="#BB86FC"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Focus Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/btn_sleep"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:background="@drawable/widget_button_bg"
            android:gravity="center"
            android:text="SLEEP"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_drive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:background="@drawable/widget_button_bg"
            android:gravity="center"
            android:text="DRIVE"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_meet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/widget_button_bg"
            android:gravity="center"
            android:text="MEET"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold" />
            
         <TextView
            android:id="@+id/btn_off"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="#CF6679"
            android:gravity="center"
            android:text="OFF"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="bold" 
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Water & Tasks Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Water Control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/widget_water_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Water: -- ml"
                android:textColor="#EFEFEF"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/btn_water_minus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/widget_button_bg"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/btn_water_plus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/widget_button_bg"
                android:src="@android:drawable/ic_input_add"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Tasks Display -->
        <TextView
            android:id="@+id/widget_task1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingVertical="2dp" />

        <TextView
            android:id="@+id/widget_task2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#B0B0B0"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingVertical="2dp" />

    </LinearLayout>
</LinearLayout>
